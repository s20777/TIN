<%- include('../../fragments/header.ejs') %>
<main>
        <h2>Zatrudnienia</h2>
          <table class="table-list" >
            <thead>
            <tr>
                <th>Pracownik</th>
                <th>Departament</th>
                <th>Akcje</th>
            </tr>
            </thead>
              <tbody>

              <% for (let emplmt of employment) { %>

                  <tr>

                      <td><%= emplmt.employee.firstName  + ' ' +  emplmt.employee.lastName %></td>
                      <td><%= emplmt.department.name %></td>


                      <td>
                          <ul class="list-actions">
                              <li>
                                  <a href="/employments/details/<%=emplmt._id%>" class="list-actions-button-details">Szczegóły</a>
                              </li>
                              <li>
                                  <a href="/employments/edit/<%=emplmt._id%>" class="list-actions-button-edit">Edytuj</a>
                              </li>
                              <li>
                                  <a class="list-actions-button-delete">Usuń</a>
                              </li>
                          </ul>
                      </td>
                  </tr>
              <% } %>


              </tbody>
          </table>
        <p>
            <a href="/" class="form-button-submit">Powrót</a>
            <a href="employments/add" class="button-add">Dodaj nowe zatrudnienie</a>
        </p>
    </main>
    <footer>
        Aleksandra Tomasiewicz s20777
    </footer>

</body>
</html>


