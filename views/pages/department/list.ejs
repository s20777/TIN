<%- include('../../fragments/header.ejs') %>
<main>
        <h2>
            Lista departamentów
        </h2>

        <table class="table-list">
            <thead>
            <tr>
                <th>Nazwa</th>
                <th>Budżet</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>

            <% for (let dept of depts) { %>

            <tr>

                <td><%= dept.name %></td>
                <td><%= dept.budget %></td>

                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/departments/details/<%=dept._id%>" class="list-actions-button-details">Szczegóły</a>
                        </li>
                        <li>
                            <a href="/departments/edit/<%=dept._id%>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a  class="list-actions-button-delete">Usuń</a>
                        </li>
                    </ul>
            </tr>
            <% } %>
            </tbody>
        </table>

        <p>
            <a href="/departments/add" class="button-add">Dodaj nowy departament</a>

        </p>
    </main>
    <footer>
        Aleksandra Tomasiewicz s20777
    </footer>



</body>
<script >
window.setMobileTable("table")
</script>
</html>


